@inject IConfiguration config
@{
    AppConfig? appConfig = config.GetSection("Project").Get<AppConfig>();
}

<!-- Header Wrapper -->
<div id="header-wrapper">
    <div class="container">

        <!-- Header -->
        <header id="header">
            <div class="inner">

                <!-- Logo -->
                <h1>
                    <a asp-area="" asp-controller="Home" asp-action="Index" id="logo">
                        @appConfig?.Company.Name
                    </a>
                </h1>
                @(await Html.PartialAsync("Components/Menu/Default"))
            </div>
        </header>

    </div>
</div>