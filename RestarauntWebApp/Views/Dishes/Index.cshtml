@model IEnumerable<DishDTO>
@{
    string strTitle = "Меню";
    ViewBag.Title = strTitle;
}

@await Html.PartialAsync("_SidebarPartial")
<div class="col-8 col-12-medium imp-medium">
    <div id="content">
        @if (Model.Any())
        {
            <section class="box article-list">
                <h2 class="icon fa-file-alt">
                    @strTitle
                </h2>
                @foreach (var entity in Model)
                {
                    <article class="box excerpt">
                        <a asp-area="" asp-controller="Dishes" asp-action="Show" asp-route-id="@entity.Id" class="image left image-dish-list">
                            <img src="~/img/@entity.PhotoFileName" alt=""/>
                        </a>
                        <div>
                            <header>
                                <h3>
                                    <a asp-area="" asp-controller="Dishes" asp-action="Show" asp-route-id="@entity.Id">
                                        @entity.Name
                                    </a>
                                </h3>
                            </header>
                            <p>
                                Цена: @entity.Price р.
                            </p>
                            <p>
                                Вес: @entity.Weight г.
                            </p>
                            <p>
                                @Html.Raw(entity.Description)
                            </p>
                        </div>
                    </article>
                }
            </section>
        }
    </div>
</div>